{
    "RuleId":  "a4f3a7c3-9fc9-4f17-a9a5-ff7aa31ec1cd\u0027)]",
    "DisplayName":  "Network Port Sweep from External Network (ASIM Network Session schema)",
    "Description":  "This detection rule detects scenarios when a particular port is being scanned by multiple external sources. The rule utilize [ASIM](https://aka.ms/AboutASIM) normalization, and is applied to any source which supports the ASIM Network Session schema.",
    "Severity":  "High",
    "Enabled":  true,
    "Query":  "let lookback = 1h;\nlet threshold = 20;\n_Im_NetworkSession(starttime=ago(lookback),endtime=now())\n| where NetworkDirection == \"Inbound\"\n| summarize make_set(DstIpAddr,100) by DstPortNumber\n| where array_length(set_DstIpAddr) \u003e threshold\n",
    "QueryFrequency":  "PT1H",
    "QueryPeriod":  "PT1H",
    "TriggerOperator":  "GreaterThan",
    "TriggerThreshold":  0,
    "SuppressionDuration":  "PT5H",
    "SuppressionEnabled":  false,
    "Tactics":  [
                    "Discovery"
                ],
